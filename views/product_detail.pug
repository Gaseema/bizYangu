        div(class="col s12 m2")
        div(class="col s12 m5")
            img(class="prodPageProdImg" src=product_pic)
        div(class="col s12 m5")
            p(class="prodPageName") #{product.product_name}
            a(class="prodPageProdBiz") Ksh.  #{product.product_price}
            p(class="prodPageSummary") #{product.summary}
