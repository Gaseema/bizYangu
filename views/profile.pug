extends layout

block content
    div(class="row" style="margin-top: 35px;width:90%;")
      div(class="col s12 m3")
          div(style="background:white;")
            div(style="width:100%; height:80px;background:#363636;")
            div
                div(class="row")
                    div(class="col s4")
                        img(style="display: block; margin-left: auto; margin-right: auto; border-radius: 50%; border: solid white 3px; margin-top: -25px; width: 80%;" src=userPhoto)
                    div(class="col s8")
                        p(style="margin: 0px;") #{userName}
                        p(style="margin: 0px;") #{userEmail}
                div(class="row")
      div(class="col s12 m6")
        div(style="background:white;")
            div(style="background:white;")
                div(style="border-bottom:solid 1px #d2d2d2;")
                    if biz_list.length
                        p(style="margin: 0px; padding: 2px 10px; font-size: 1.2em;") Manage Your Businesses
                    else
                        p(style="margin: 0px; padding: 2px 10px; font-size: 1.2em;") Create Business
            div(class="settingsLstBiz" style="padding:10px;")
                div(class="row")
                    if biz_list.length
                        each biz in biz_list
                            div(class="col s6 m4")
                                a(href=biz.url+"/update")  
                                    p(style="width:100%;height:100px;background:#363636;margin:0px;") img
                                    p(style="margin:0px;") #{biz.biz_name}
                    else
                        div(class="createBiz")
                            p We want your experience to be perfect for your needs. Get started by creating a business.
                            a(href="/biz/create" class="btn regularBtn") create
      div(class="col s12 m3")
        div(style="background:white;")
            div(class="postYourAd" style="border-bottom:solid 1px black;")
                p(style="margin: 0px; padding: 2px 10px; font-size: 1.2em;") Post Your Advert